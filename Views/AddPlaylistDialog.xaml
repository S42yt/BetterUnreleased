<Window x:Class="BetterUnreleased.Views.AddPlaylistDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Playlist" Height="250" Width="400" WindowStartupLocation="CenterOwner">
  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    <Image x:Name="ThumbnailImage" Height="100" Width="100" Margin="5" />
    <Button Content="Select Thumbnail" Click="SelectThumbnail_Click" Margin="5" Grid.Row="1"/>
    <TextBlock Text="Playlist Title:" Margin="5" Grid.Row="2"/>
    <TextBox x:Name="TitleTextBox" Margin="5" Grid.Row="3"/>
    
    <Button Content="Save" HorizontalAlignment="Right" Width="75" Click="Save_Click" Grid.Row="4" Margin="5"/>
  </Grid>
</Window>